@model IEnumerable<WebPractica02.Entity.consultaEntities>

@{
    ViewBag.Title = "RealizarConsulta";
}

<h2>Consulta</h2>
<section class="h-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <div class="d-flex justify-content-center">
                                @using (Html.BeginForm("RealizarConsulta", "Mostrar", FormMethod.Get))
                                {
                                    <h3 class="mb-5 text-uppercase">Consulta de Vehículos</h3>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <label for="cedula">Cedula</label>
                                                @Html.TextBox("Cedula", null, new { @class = "form-control", type = "text" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <label for="cedula">Nombre</label>
                                                @Html.TextBox("Nombre", null, new { @class = "form-control", type = "text" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <label for="marca">Marca</label>
                                                @Html.TextBox("Marca", null, new { @class = "form-control", type = "text" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <label for="modelo">Modelo</label>
                                                @Html.TextBox("Modelo", null, new { @class = "form-control", type = "text" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="precio">Precio</label>
                                            @Html.TextBox("Precio", null, new { @class = "form-control", type = "number" })
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" class="btn btn-warning btn-lg">Buscar</button>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Consulta de Vehículos</h3>
                                @if (Model != null && Model.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Cedula</th>
                                                    <th>NombreVendedor</th>
                                                    <th>Marca</th>
                                                    <th>Modelo</th>
                                                    <th>Precio</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Cedula</td>
                                                        <td>@item.Nombre</td>
                                                        <td>@item.Marca</td>
                                                        <td>@item.Modelo</td>
                                                        <td>@item.Precio.ToString("C")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="alert">@ViewBag.Mensaje</p>
                                }


                                <div class="d-flex justify-content-end pt-3">
                                    <button type="button" class="btn btn-light btn-lg">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
